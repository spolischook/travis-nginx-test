{% extends 'OroConfigBundle::configPage.html.twig' %}
{% import 'OroUIBundle::macros.html.twig' as UI %}

{% oro_title_set({params : {"%organization%": entity.name }}) %}

{% set pageTitle = [
        UI.link({
            'path': path('oropro_organization_index'),
            'label': 'oro.organization.entity_plural_label'|trans
        }),
        UI.link({
            'path': path('oropro_organization_view', {id: entity.id}),
            'label': entity.name
        }),
        'oropro.organization_config.organization_configuration.label'|trans
    ]
%}

{% set formAction    = path(
        'oropro_organization_config',
        {id:entity.id, activeGroup: activeGroup, activeSubGroup: activeSubGroup}
    )
%}
{% set routeName = 'oropro_organization_config' %}
{% set routeParameters = {id: entity.id} %}
