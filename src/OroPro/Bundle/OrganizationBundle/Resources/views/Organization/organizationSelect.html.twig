{% extends 'OroUIBundle:actions:update.html.twig' %}

{% set formAction = formAction %}
{% set addQueryParameters = false %}

{% block pageHeader %}
    {% set title = 'oropro.organization.select_organization_action.title'|trans %}
    {% include 'OroUIBundle::page_title_block.html.twig' with { title: title } %}
{% endblock pageHeader %}

{% block navButtons %}
    {{ UI.buttonType({'type': 'submit', 'class': 'btn-success', 'label': 'oropro.organization.select_organization_action.continue_button.label'|trans}) }}
{% endblock navButtons %}

{% block content_data %}
    {% set id = 'organization-form' %}
    {% set dataBlocks = [{
        'title': 'oropro.organization.select_organization_action.block.title'|trans,
        'class': 'active',
        'subblocks': [
            {
                'title': '',
                'data': [
                    form_row(form._sa_org_id)
                ]
            }
        ]
    }] %}
    {% set data = {
        'formErrors': form_errors(form)? form_errors(form) : null,
        'dataBlocks': dataBlocks,
    } %}
    {{ parent() }}
{% endblock content_data %}


