{% extends 'OroUIBundle:actions:view.html.twig' %}
{% import 'OroUIBundle::macros.html.twig' as macros %}

{% oro_title_set({params : {"%organization.name%": entity.name|default('N/A')} }) %}

{% block navButtons %}
    {% if resource_granted('EDIT', entity) %}
        {{ UI.editButton({
            'path' : path('oropro_organization_update', { 'id': entity.id }),
            'entity_label': 'oro.organization.entity_label'|trans
        }) }}
    {% endif %}
{% endblock navButtons %}

{% block pageHeader %}
    {% set breadcrumbs = {
        'entity': entity,
        'indexPath': path('oropro_organization_index'),
        'indexLabel': 'oro.organization.entity_plural_label'|trans,
        'entityTitle': entity.name|default('N/A')
    } %}
    {{ parent() }}
{% endblock pageHeader %}

{% block breadcrumbs %}
    {{ parent() }}
    <div class="status-enabled pull-left">
        {% if entity.enabled %}
            <div class="badge badge-enabled status-enabled"><i class="icon-status-enabled icon-circle"></i>{{ 'Active'|trans }}</div>
        {% else %}
            <div class="badge badge-disabled status-disabled"><i class="icon-status-disabled icon-circle"></i>{{ 'Inactive'|trans }}</div>
        {% endif %}
    </div>
{% endblock breadcrumbs %}

{% block content_data %}
    {% set organizationInformationWidget %}
        {{ oro_widget_render({
            'widgetType': 'block',
            'url': path('oro_organization_widget_info', {id: entity.id})
        }) }}
    {% endset %}

    {% set organizationUsersWidget %}
        {{ oro_widget_render({
            'widgetType': 'block',
            'url': path('oro_organization_widget_users', {id: entity.id})
        }) }}
    {% endset %}

    {% set dataBlocks = [
        {
            'title': 'General Information'|trans,
            'class': 'active',
            'subblocks': [
                {'data' : [organizationInformationWidget] },
            ]
        },
        {
            'title': 'oro.organization.users.label'|trans,
            'subblocks': [
                {'data' : [organizationUsersWidget]}
            ]
        },
    ] %}

    {% set id = 'organizationView' %}
    {% set data = {'dataBlocks': dataBlocks} %}

    {{ parent() }}
{% endblock content_data %}
