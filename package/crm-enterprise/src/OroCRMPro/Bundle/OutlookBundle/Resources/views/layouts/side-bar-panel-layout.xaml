                    </DockPanel>
                    <DockPanel VerticalAlignment="Stretch" Visibility="{DynamicResource RootControl_Loading}">
                        <Image Style="{DynamicResource busyIndicatorStyle}" />
                    </DockPanel>
                </Grid>
            </DockPanel>
        </ScrollViewer>
    </DockPanel>
</UserControl>
