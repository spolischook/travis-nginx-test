{% import 'OroDataGridBundle::macros.html.twig' as dataGrid %}

<div class="widget-content">
    <h5 class="widget-subtitle"> {{ 'orob2b.account.visibility.to_all.label'|trans }} </h5>
    <div id="product-visibility-all">
        {{ form_row(form.all) }}
    </div>
    <h5 class="widget-subtitle indented">{{ 'orob2b.account.visibility.accountgroupproductvisibility.entity_label'|trans }}</h5>
    <div id="product-visibility-account-group">
        {{ form_row(form.accountGroup, {'id': 'accountgroup-product-visibility-changeset'~'-'~website.id}) }}
        {{ dataGrid.renderGrid('account-group-product-visibility-grid', {target_entity_id: entity.id, website_id: website.id}) }}
    </div>
    <h5 class="widget-subtitle indented">{{ 'orob2b.account.visibility.accountproductvisibility.entity_label'|trans }}</h5>
    <div id="product-visibility-account">
        {{ form_row(form.account, {'id': 'account-product-visibility-changeset'~'-'~website.id}) }}
        {{ dataGrid.renderGrid('account-product-visibility-grid', {target_entity_id: entity.id, website_id: website.id}) }}
    </div>
</div>
