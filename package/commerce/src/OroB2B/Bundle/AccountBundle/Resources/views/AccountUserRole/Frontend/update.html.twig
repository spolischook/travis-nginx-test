{% extends 'OroUIBundle:actions:update.html.twig' %}
{% import 'OroDataGridBundle::macros.html.twig' as dataGrid %}

{% form_theme form with 'OroFormBundle:Form:fields.html.twig' %}

{% set formAction = path('orob2b_account_frontend_account_user_role_create') %}
{% if entity.id is defined and entity.id %}
    {% set formAction = path('orob2b_account_frontend_account_user_role_update', {id: entity.id}) %}
{% elseif predefined_role_id is defined and predefined_role_id %}
    {% set formAction = path('orob2b_account_frontend_account_user_role_update', {id: predefined_role_id}) %}
{% endif %}

{% oro_title_set({params : {"%label%": entity.label|default('N/A'|trans), '%entityName%': 'orob2b.account.accountuserrole.entity_label'|trans} }) %}

{% block navButtons %}
    {% set fields = [] %}
    {% for name, child in form %}
        {% if name not in ['appendUsers', 'removeUsers', 'entity', 'privileges', 'action'] %}
            {% set fields = fields|merge({(name): '#' ~ child.vars.id}) %}
        {% endif %}
    {% endfor %}

    {% set options = {
        elSelector: '.btn-success.role-submit',
        formName: form.vars.name,
        formSelector: '#' ~ form.vars.id,
        labelSelector: '#' ~ form.label.vars.id,
        privilegesSelector: '#' ~ form.privileges.vars.id,
        appendUsersSelector: '#roleAppendUsers',
        removeUsersSelector: '#roleRemoveUsers',
        fields: fields
    } %}
    <div data-page-component-module="orouser/js/views/role-view"
         data-page-component-options="{{ options|json_encode }}">
    </div>
    {% if entity.id and resource_granted('orob2b_account_frontend_account_user_role_delete', entity) and not entity.isPredefined %}
        {{ UI.deleteButton({
            'dataUrl': path('orob2b_api_frontend_account_delete_accountuserrole', {'id': entity.id}),
            'dataRedirect': path('orob2b_account_frontend_account_user_role_index'),
            'aCss': 'no-hash remove-button',
            'dataId': entity.id,
            'id': 'btn-remove-attribute',
            'entity_label': 'orob2b.account.accountuserrole.entity_label'|trans,
        }) }}
        {{ UI.buttonSeparator() }}
    {% endif %}
    {{ UI.cancelButton(path('orob2b_account_frontend_account_user_role_index')) }}
    {% set html = UI.buttonType({'type': 'button', 'class': 'btn-success role-submit', 'label': 'Save and Close'|trans}) %}
    {% if entity.id or resource_granted('orob2b_account_frontend_account_user_role_update') %}
        {# button attribute 'action' is avoided because of there is unacceptable submit binding on .action-button in init-layout.js #}
        {% set html = html ~ UI.buttonType({
            'type': 'button',
            'class': 'btn-success main-group role-submit',
            'label': 'Save'|trans,
            'data': {
                'action': 'save_and_stay'
            }
        }) %}
    {% endif %}
    {{ UI.dropdownSaveButton({'html': html}) }}
{% endblock %}

{% block pageHeader %}
    {% if entity.id %}
        {% set breadcrumbs = {
            'entity':      entity,
            'indexPath':   path('orob2b_account_frontend_account_user_role_index'),
            'indexLabel': 'orob2b.account.accountuserrole.entity_plural_label'|trans,
            'entityTitle': entity.label|default('N/A'|trans)
        } %}
        {{ parent() }}
    {% else %}
        {% set title = 'oro.ui.create_entity'|trans({'%entityName%': 'orob2b.account.accountuserrole.entity_label'|trans}) %}
        {% include 'OroUIBundle::page_title_block.html.twig' with { title: title } %}
    {% endif %}
{% endblock pageHeader %}

{% block content_data %}
    {% set id = 'account-user-role-frontend-edit' %}

    {% set dataBlocks = [
        {
            'title': 'orob2b.account.sections.general'|trans,
            'class': 'active',
            'subblocks': [
                {
                    'data': [
                        form_row(form.label),
                    ]
                }
            ]
        }
    ] %}

    {% for name, config in form.vars.privilegeConfig %}
        {% set dataBlocks = dataBlocks|merge([{
            'title': config.label|trans,
            'subblocks': [
                {
                    'title': '',
                    'useSpan': false,
                    'data': [
                        form_widget(form.children[name])
                    ]
                }
            ]
        }]) %}
    {% endfor %}

    {% set dataBlocks = dataBlocks|merge([{
        'title' : 'orob2b.account.accountuser.entity_plural_label'|trans,
        'subblocks': [{
            'title' : null,
            'useSpan': false,
            'data' : [
                form_widget(form.appendUsers, {'id': 'roleAppendUsers'}),
                form_widget(form.removeUsers, {'id': 'roleRemoveUsers'}),
                dataGrid.renderGrid(
                    'account-account-users-grid-frontend-update',
                    {
                        role: entity.id,
                        account: entity.account,
                        '_parameters' : {'data_in': form.appendUsers.vars.value|split(',')|default([])},
                    },
                    { cssClass: 'inner-grid' }
                )
            ]
        }]
    }] ) %}

    {% set data = {
        'formErrors': form_errors(form),
        'dataBlocks': dataBlocks
    }%}

    {% set data = oro_form_process(data, form) %}
    {{ UI.scrollData(id, data, form) }}

{% endblock content_data %}
