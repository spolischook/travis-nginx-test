{% extends commerce.layout %}

{% block header %}
{% endblock %}

{% block content %}
<div class="container">
    <form id="{{ form.vars.id }}" name="{{ form.vars.name }}" action="{{ path('orob2b_account_frontend_account_user_register') }}"
          class="form-signin" method="{{ form.vars.method }}" {{ form_enctype(form) }}>
        <div class="title-box">
            <h2 class="title">{{ 'orob2b.account.accountuser.profile.registration.title'|trans }}</h2>
        </div>

        <fieldset>
            {{ form_widget(form) }}

            <div class="form-row">
                <a href="{{ path('orob2b_account_account_user_security_login') }}" class="btn btn-link">&laquo; {{ 'orob2b.account.accountuser.profile.return_to_login'|trans }}</a>
                <button type="submit" class="btn btn-large btn-primary extra-submit">{{ 'orob2b.account.accountuser.profile.register'|trans }}</button>
            </div>
        </fieldset>
    </form>

    {{ oro_form_js_validation(form) }}
</div>
{% endblock content %}
