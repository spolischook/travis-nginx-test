@name = account_user_reset_password
@entityName = OroB2B\Bundle\AccountBundle\Entity\AccountUser
@subject = Reset Account User Password
@isSystem = 1
@isEditable = 1

<h1>Hello, {{ entity.username }}!</h1>

<p>To reset your password - please visit
    <a href="{{
            oro_config_value('oro_ui.application_url')|trim('/')
            ~ path('orob2b_account_frontend_account_user_password_reset', { token: entity.confirmationToken, username: entity.username })
        }}">{{ oro_config_value('oro_ui.application_url')|trim('/') ~ path('orob2b_account_frontend_account_user_password_reset', { token: entity.confirmationToken, username: entity.username })}}</a>
</p>
