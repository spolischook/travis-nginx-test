{% extends 'OroUIBundle:actions:view.html.twig' %}

{% oro_title_set({params : {"%name%": entity.name|default('N/A'|trans)}}) %}

{% block pageHeader %}
    {% set breadcrumbs = {
        'entity': entity,
        'indexPath': path('orob2b_website_index'),
        'indexLabel': 'orob2b.website.entity_plural_label'|trans,
        'entityTitle': entity.name |default('N/A'|trans)
        }
    %}
    {{ parent() }}
{% endblock pageHeader %}

{% block navButtons %}
    {% if resource_granted('EDIT', entity) %}
        {{ UI.editButton({
            'path' : path('orob2b_website_update', { 'id': entity.id }),
            'entity_label': 'orob2b.website.entity_label'|trans
        }) }}
    {% endif %}
    {% if resource_granted('DELETE', entity) %}
        {{ UI.deleteButton({
            'dataUrl': path('orob2b_api_delete_website', {'id': entity.id}),
            'dataRedirect': path('orob2b_website_index'),
            'aCss': 'no-hash remove-button',
            'dataId': entity.id,
            'id': 'btn-remove-account',
            'entity_label': 'orob2b.website.entity_label'|trans
        }) }}
    {% endif %}
{% endblock navButtons %}

{% block content_data %}
    {% set websiteInformationWidget %}
        {{ oro_widget_render({
            'widgetType': 'block',
            'title': 'orob2b.website.widgets.website_information'|trans,
            'url': path('orob2b_website_info', {id: entity.id})
        }) }}
    {% endset %}

    {% set generalSectionBlocks = [{'data' : [websiteInformationWidget]}]%}

    {% set dataBlocks = [
        {
            'title': 'orob2b.website.sections.general'|trans,
            'class': 'active',
            'subblocks': generalSectionBlocks
        }
    ] %}


    {% set id = 'website-view' %}
    {% set data = {'dataBlocks': dataBlocks} %}

    {{ parent() }}
{% endblock content_data %}
