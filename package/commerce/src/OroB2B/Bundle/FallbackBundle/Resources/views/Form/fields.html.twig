{% block orob2b_fallback_value_widget %}
    <table>
        {% if form.vars.group_fallback_fields %}
            <tr>
                <td nowrap="true" class="fallback-item-use-fallback">
                    {{ form_widget(form.use_fallback) }} {{ form.use_fallback.vars.label|trans }}
                </td>
                <td class="fallback-item-fallback">
                    {{ form_widget(form.fallback, {'attr': {'class': 'fallback'}}) }}
                </td>
            </tr>
        {% endif %}
        <tr>
            <td
                    class="fallback-item-value {% if form.vars.group_fallback_fields %}fallback-item-value-top{% endif %}"
                    {% if form.vars.group_fallback_fields %}colspan="2"{% endif %}
                    >
                {{ form_widget(form.value) }}
            </td>
            {% if not form.vars.group_fallback_fields %}
                <td nowrap="true" class="fallback-item-use-fallback">
                    {{ form_widget(form.use_fallback) }} {{ form.use_fallback.vars.label|trans }}
                </td>
                <td class="fallback-item-fallback">
                    {{ form_widget(form.fallback, {'attr': {'class': 'fallback'}}) }}
                </td>
            {% endif %}
        </tr>
    </table>

    {{ form_errors(form.value) }}
    {{ form_errors(form.fallback) }}
{% endblock %}

{% block orob2b_fallback_localized_property_widget %}
    <table class="fallback-container"
            data-page-component-module="oroui/js/app/components/view-component"
            data-page-component-options="{{ {view: 'orob2bfallback/js/app/views/fallback-view'}|json_encode }}"
            data-layout="separate"
            >
        <tr class="fallback-item">
            <td class="fallback-item-label">{{ form.default.vars.label|trans }}</td>
            <td class="fallback-item-value">
                {{ form_widget(form.default) }}
                {{ form_errors(form.default) }}
            </td>
            <td class="fallback-status"></td>
        </tr>
        {% for locale in form.locales %}
            <tr class="fallback-item" style="display: none;">
                <td class="fallback-item-label {% if locale.vars.group_fallback_fields %}fallback-item-top{% endif %}">{{ locale.vars.label|trans }}</td>
                <td {% if locale.vars.group_fallback_fields %}class="fallback-item-top"{% endif %} colspan="2">
                    {{ form_widget(locale) }}
                    {{ form_errors(locale) }}
                </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}

{% block orob2b_fallback_website_property_widget %}
    <table class="fallback-container"
            data-page-component-module="oroui/js/app/components/view-component"
            data-page-component-options="{{ {view: 'orob2bfallback/js/app/views/fallback-view'}|json_encode }}"
            data-layout="separate"
            >
        <tr class="fallback-item">
            <td class="fallback-item-label">{{ form.default.vars.label|trans }}</td>
            <td class="fallback-item-value">
                {{ form_widget(form.default) }}
                {{ form_errors(form.default) }}
            </td>
            <td class="fallback-status"></td>
        </tr>
        {% for website in form.websites %}
            <tr class="fallback-item" style="display: none">
                <td class="fallback-item-label">{{ website.vars.label|trans }}</td>
                <td colspan="2">
                    {{ form_widget(website) }}
                    {{ form_errors(website) }}
                </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}

{% block orob2b_fallback_localized_value_collection_widget %}
    {{ form_widget(form.values) }}
    {{ form_errors(form.values) }}
    {{ form_widget(form.ids) }}
    {{ form_errors(form.ids) }}
{% endblock %}
