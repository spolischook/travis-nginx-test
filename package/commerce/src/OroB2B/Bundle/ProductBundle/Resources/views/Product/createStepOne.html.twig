{% extends 'OroUIBundle:actions:update.html.twig' %}
{% import 'OroDataGridBundle::macros.html.twig' as dataGrid %}

{% oro_title_set({params : {} }) %}

{% set formAction = path('orob2b_product_create')  %}

{% block navButtons %}
    {{ parent() }}

    {{ UI.cancelButton(path('orob2b_product_index')) }}
    {% set html = UI.buttonType({
        'type': 'submit',
        'class': 'btn-success main-group',
        'label': 'orob2b.product.ui.continue'|trans,
        'action': 'orob2b_product_create'
    }) %}
    {{ UI.dropdownSaveButton({'html': html}) }}
{% endblock navButtons %}

{% block pageHeader %}
    {% set title = 'oro.ui.create_entity'|trans({'%entityName%': 'orob2b.product.entity_label'|trans}) %}
    {% include 'OroUIBundle::page_title_block.html.twig' with { title: title } %}
{% endblock pageHeader %}

{% block content_data %}
    {% set id = 'product-create-step-one' %}

    {% set data = {
        'formErrors': form_errors(form),
        'dataBlocks': []
    }%}

    {{ parent() }}
{% endblock content_data %}
