{% block _product_grid_row_more_info_widget %}
    {% set attr = attr|merge({
        class: attr.class|default('') ~ " oro-more-info-toggler oro-more-info-toggler_<%= themeOptions.view %>"
    }) %}
    <div {{ block('block_attributes') }}>
        <i class="cf-play"></i>
        <a href="#" data-more-info-expand>More Info</a>
        <div class="oro-more-info-toggler__container" data-more-info>
            <ul class="oro-more-info-toggler__list oro-more-info-toggler__list_<%= themeOptions.view %>">
