{% block _product_grid_row_template_widget %}
    {% set attr = attr|merge({
        class: attr.class|default('')
    }) %}
    <script id="template-grid-row" type="text/template">
        <div {{ block('block_attributes') }}>
            {{ block_widget(block) }}
        </div>
    </script>
{% endblock %}

{% block _product_grid_row_image_holder_widget %}
    {% import 'OroB2BProductBundle::image_macros.html.twig' as Image %}

    {% set attr = attr|merge({
        class: attr.class|default('') ~ " product-item__image-holder product-item__image-holder_<%= themeOptions.view %>"
    }) %}
    <div {{ block('block_attributes') }}>
        {% set noImageUrl = Image.url(null, 'product_large') %}
        <a href="javascript:void(0)" class="view-product" style="background-image: url('<% if (model.image) { %><%= model.image %><% } else { %>{{ noImageUrl }}<% } %>')"></a>
    </div>
{% endblock %}

{% block _product_grid_row_quick_view_widget %}
    {% set attr = attr|merge({
        class: attr.class|default('') ~ " product-item__quick-view-btn",
        'data-toggle': 'modal',
        'data-target': '#product',
    }) %}
    <div {{ block('block_attributes') }}>
        <span class="btn btn-dark btn_sm">Quick View</span>
    </div>
{% endblock %}

{% block _product_grid_row_title_widget %}
    {% set attr = attr|merge({
        class: attr.class|default('') ~ " product-item__title product-item__title_<%= themeOptions.view %>"
    }) %}
    <h3 {{ block('block_attributes') }}>
        <a href="javascript:void(0)" class="view-product"><%= model.name %></a>
    </h3>
{% endblock %}

{% block _product_grid_row_primary_content_container_widget %}
    {% set attr = attr|merge({
        class: attr.class|default('') ~ " product-item__primary-content product-item__primary-content_<%= themeOptions.view %>"
    }) %}
    <div {{ block('block_attributes') }}>
        <div class="product-item__primary-half product-item__primary-half_<%= themeOptions.view %>">
            {{ block_widget(block) }}
        </div>
    </div>
{% endblock %}

{% block _product_grid_row_number_widget %}
    {% set attr = attr|merge({
        class: attr.class|default('') ~ " product-item__number product-item__number_<%= themeOptions.view %>"
    }) %}
    <div {{ block('block_attributes') }}>
        Item #: <span class="red"><%= model.sku %></span>
    </div>
{% endblock %}

{% block _product_grid_row_specification_widget %}
    {% set attr = attr|merge({
        class: attr.class|default('') ~ " product__specification product__specification_<%= themeOptions.view %> mb2-md"
    }) %}
    <div {{ block('block_attributes') }}>{{ block_widget(block) }}</div>
{% endblock %}

{% block _product_grid_row_sku_container_widget %}
    {% set attr = attr|merge({
    class: attr.class|default('') ~ " table borderless paddingless mb0-md mb0-sm"
    }) %}
    <table {{ block('block_attributes') }}>
        <tbody>
        {{ block_widget(block) }}
        </tbody>
    </table>
{% endblock %}

{% block _product_grid_row_sku_widget %}
    <tr>
        <td>{{ 'orob2b.product.frontend.index.item'|trans }}</td>
        <td><span class="red"><%= model.sku %></span></td>
    </tr>
{% endblock %}

{% block _product_grid_row_mfg_widget %}
