{% import 'OroUIBundle::macros.html.twig' as UI %}
{% import 'OroEmailBundle::actions.html.twig' as EmailActions %}

<div class="widget-content">
    <div class="row-fluid form-horizontal">
        <div class="responsive-block">
            {{ UI.renderProperty('orob2b.rfp.request.first_name.label'|trans, entity.firstName) }}
            {{ UI.renderProperty('orob2b.rfp.request.last_name.label'|trans, entity.lastName) }}
            {{ UI.renderHtmlProperty('orob2b.rfp.request.email.label'|trans, EmailActions.sendEmailLink(entity.email, entity)) }}
            {{ UI.renderProperty('orob2b.rfp.request.phone.label'|trans, entity.phone) }}
            {{ UI.renderProperty('orob2b.rfp.request.company.label'|trans, entity.company|default('N/A'|trans)) }}
            {{ UI.renderProperty('orob2b.rfp.request.role.label'|trans, entity.role|default('N/A'|trans)) }}
            {{ UI.renderProperty('orob2b.rfp.request.po_number.label'|trans, entity.poNumber|default('N/A'|trans)) }}
            {{ UI.renderProperty('orob2b.rfp.request.ship_until.label'|trans, entity.shipUntil|oro_format_date|default('N/A'|trans)) }}
            {% if entity.account %}
                {{ UI.renderHtmlProperty('orob2b.rfp.request.account.label'|trans, UI.entityViewLink(entity.account, entity.account.name, 'orob2b_account_view')) }}
            {% endif %}
            {% if entity.accountUser %}
                {{ UI.renderHtmlProperty('orob2b.rfp.request.account_user.label'|trans, UI.entityViewLink(entity.accountUser, entity.accountUser.fullName, 'orob2b_account_account_user_view')) }}
            {% endif %}
            {{ UI.renderProperty('orob2b.rfp.request.status.label'|trans, entity.status.label) }}
            {% if entity.status.name =='canceled' %}
                {{ UI.renderHtmlProperty('orob2b.rfp.request.cancellation_reason.label'|trans,entity.cancellationReason ) }}
            {% endif %}
            {% if entity.assignedUsers | length %}
                {{ UI.renderHtmlProperty('orob2b.rfp.request.assigned_users.label'|trans, UI.entityViewLinks(entity.assignedUsers, 'fullName', 'oro_user_view')) }}
            {% endif %}
            {% if entity.assignedAccountUsers | length %}
                {{ UI.renderHtmlProperty('orob2b.rfp.request.assigned_account_users.label'|trans, UI.entityViewLinks(entity.assignedAccountUsers, 'fullName', 'orob2b_account_account_user_view')) }}
            {% endif %}
        </div>
    </div>
</div>
