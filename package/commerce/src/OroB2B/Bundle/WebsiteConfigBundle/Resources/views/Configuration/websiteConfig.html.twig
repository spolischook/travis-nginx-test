{% extends 'OroConfigBundle::configPage.html.twig' %}
{% import 'OroUIBundle::macros.html.twig' as UI %}

{% oro_title_set({params : {"%website%": entity.name }}) %}

{% set pageTitle = [
        UI.link({
            'path': path('orob2b_website_index'),
            'label': 'orob2b.website.entity_plural_label'|trans
        }),
        UI.link({
            'path': path('orob2b_website_view', {id: entity.id}),
            'label': entity.name
        }),
        'orob2b.website_config.website_configuration.label'|trans
    ]
%}

{% set formAction    = path(
        'orob2b_website_config',
        {id:entity.id, activeGroup: activeGroup, activeSubGroup: activeSubGroup}
    )
%}
{% set routeName = 'orob2b_website_config' %}
{% set routeParameters = {id: entity.id} %}

