{% block _datagrid_toolbar_sorting_widget %}
    {% set attr = attr|merge({
        class: attr.class|default('') ~ " sorting pull-left form-horizontal",
        'data-grid-sorting': ''
    }) %}
    <div class="oro-oq__filter__item">
        <div{{ block('block_attributes') }}></div>
    </div>
{% endblock %}

{% block _datagrid_toolbar_mass_actions_widget %}
    {% set attr = attr|merge({
        class: attr.class|default('') ~ " mass-actions-panel btn-group icons-holder"
    }) %}
    <div class="oro-oq__filter__item">
        <div{{ block('block_attributes') }}>{{ block_widget(block) }}</div>
    </div>
{% endblock %}

