{% extends 'form_div_layout.html.twig' %}

{% block form_widget_simple %}
    {% set attr = attr|merge({
        class: attr.class|default('') ~ " input input_block input_md"
    }) %}
    {{ parent() }}
{% endblock %}

{%- block form_row -%}
    {{- form_label(form) -}}
    {{- form_widget(form) -}}
    {{- form_errors(form) -}}
{%- endblock form_row -%}

{% block widget_attributes %}
    {% if errors|length > 0 %}
        {% set attr = attr|merge({
            class: attr.class|default('') ~ ' input_error'
        }) %}
    {% endif %}
    {{ parent() }}
{% endblock widget_attributes %}

{%- block form_errors -%}
    {%- if errors|length > 0 -%}
        <div class="notification notification_xsm notification_error notification-radiused mmt5-md">
            <ul>
            {%- for error in errors -%}
                <li><i class="icon-attention"></i><span class="mml5-md">{{ error.message }}</span></li>
            {%- endfor -%}
            </ul>
        </div>
    {%- endif -%}
{%- endblock form_errors -%}
