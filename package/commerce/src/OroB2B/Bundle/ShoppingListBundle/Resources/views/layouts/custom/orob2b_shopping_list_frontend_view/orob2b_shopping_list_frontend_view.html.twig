{% block _shopping_list_view_tabs_widget %}
    {% set attr = layout_attr_defaults(attr, {
        'data-page-component-module': 'orob2bshoppinglist/js/app/components/shoppinglist-view-component',
        'data-page-component-options': {
            eventChannelId: 'shopping-list-title'
        },
        '~class': "shopping-list-tabs"
    }) %}

    <div{{ block('block_attributes') }}>
        {{ block_widget(block) }}
    </div>
{% endblock %}

{% block _shopping_list_view_container_widget %}
    {% set attr = layout_attr_defaults(attr, {'~class': "shopping-list-wrapper"}) %}

    <div{{ block('block_attributes') }}>
        {{ block_widget(block) }}
    </div>
{% endblock %}

{% block _shopping_list_view_container_content_widget %}
    {% set attr = layout_attr_defaults(attr, {'~class': "shopping-list__content"}) %}

    <div{{ block('block_attributes') }}>
        {{ block_widget(block) }}
    </div>
{% endblock %}

{% block _shopping_list_view_more_widget %}
    {% set attr = layout_attr_defaults(attr, {'~class': "shopping-list-dropdown"}) %}

    <div{{ block('block_attributes') }}>
        <input class="shopping-list-dropdown__helper" type="radio" id="shopping-list-dropdown" name="dropdowns" hidden="hidden">
        <div class="shopping-list-dropdown__inner">
            <label class="shopping-list-dropdown__handle" for="shopping-list-dropdown">
                <i class="shopping-list-dropdown__icon cf-add_circle"></i>
            </label>
            <span class="shopping-list-dropdown__dropdown">
                <ul class="shopping-list-links">
                    {% for shoppingList in shoppingLists %}
                        <li class="shopping-list-links__item shopping-list-links__item--{{ shoppingList.id }} {% if shoppingList.id == selectedShoppingList.id %} shopping-list-links__item--current {% endif %}">
                            <a class="shopping-list-links__link" href="{{ path('orob2b_shopping_list_frontend_view', {'id' : shoppingList.id}) }}">
                                <i class="shopping-list-links__icon cf-check"></i>
                                <span class="shopping-list-links__text">{{ shoppingList.label }}</span>
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </span>
        </div>
        <input class="shopping-list-dropdown__helper" type="radio" id="shopping-list-overlay" name="dropdowns" checked="checked" hidden="hidden">
        <label class="shopping-list-dropdown__overlay" for="shopping-list-overlay"></label>
    </div>
{% endblock _shopping_list_view_more_widget %}
