{% import 'OroUIBundle::macros.html.twig' as UI %}
{% import 'OroEntityConfigBundle::macros.html.twig' as entityConfig %}

<div class="widget-content">
    <div class="row-fluid form-horizontal">
        <div class="responsive-block">
            {{ UI.renderProperty('orob2b.shoppinglist.id.label'|trans, shopping_list.id) }}
            {% if shopping_list.account %}
                {{ UI.renderHtmlProperty('orob2b.shoppinglist.account.label'|trans, UI.entityViewLink(shopping_list.account, shopping_list.account|oro_format_name, 'orob2b_account_view')) }}
            {% endif %}
            {% if shopping_list.accountUser %}
                {{ UI.renderHtmlProperty('orob2b.shoppinglist.account_user.label'|trans, UI.entityViewLink(shopping_list.accountUser, shopping_list.accountUser|oro_format_name, 'orob2b_account_account_user_view')) }}
            {% endif %}
            {{ UI.renderProperty('orob2b.shoppinglist.label.label'|trans, shopping_list.label) }}
            {{ UI.renderSwitchableHtmlProperty('orob2b.shoppinglist.notes.label'|trans, shopping_list.notes) }}
        </div>
        <div class="responsive-block">
            {{ entityConfig.renderDynamicFields(shopping_list) }}
        </div>
    </div>
</div>
