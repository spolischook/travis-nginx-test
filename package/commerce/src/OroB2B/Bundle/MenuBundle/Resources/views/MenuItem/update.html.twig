{% extends 'OroUIBundle:actions:update.html.twig' %}
{% import 'OroUIBundle::macros.html.twig' as UI %}

{% set entityId = entity.id %}
{% set parentId = entity.parent ? entity.parent.id : null %}

{% set formAction = entityId ? url('orob2b_menu_item_update', {'id': entityId}) : url('orob2b_menu_item_create', {'id': parentId}) %}

{% oro_title_set({params : {
    "%title%": entity.defaultTitle.string|default('N/A'|trans),
    "%entityName%": (parentId ? 'orob2b.menu.menuitem.entity_label' : 'orob2b.menu.menuitem.roots_entity_label')|trans,
} }) %}

{% block navButtons %}
    {% if entityId %}
        {% if resource_granted('orob2b_menu_item_create') %}
            {{ UI.button({
                'path' : path('orob2b_menu_item_create', { 'id': entityId }),
                'iCss': 'icon-folder-close',
                'aCss': 'btn-primary',
                'label': 'oro.ui.create_entity'|trans({'%entityName%': 'orob2b.menu.menuitem.entity_label'|trans}),
                'title': 'oro.ui.create_entity'|trans({'%entityName%': 'orob2b.menu.menuitem.entity_label'|trans})
            }) }}
        {% endif %}
    {% endif %}

    {{ parent() }}

    {{ UI.cancelButton(path('orob2b_menu_item_view', {'id': root.id})) }}
    {% set html = UI.saveAndStayButton() %}
    {{ UI.dropdownSaveButton({'html': html}) }}
{% endblock navButtons %}

{% block pageHeader %}
    {% if entityId %}
        {% set breadcrumbs = {
            'entity':      entity,
            'indexPath':   path('orob2b_menu_item_roots'),
            'indexLabel': 'orob2b.menu.menuitem.roots_plural_label'|trans,
            'entityTitle': entity.defaultTitle|default('N/A'|trans),
            'additional': [{
                'indexPath':   path('orob2b_menu_item_view', {'id': entity.root}),
                'indexLabel':  root.defaultTitle
            }]
        } %}
    {% else %}
        {% set entityLabel = parentId ? 'orob2b.menu.menuitem.entity_label' : 'orob2b.menu.menuitem.roots_entity_label' %}
        {% set title = 'oro.ui.create_entity'|trans({'%entityName%': entityLabel|trans}) %}
        {% set breadcrumbs = {
            'entity':      entity,
            'indexPath':   path('orob2b_menu_item_roots'),
            'indexLabel': 'orob2b.menu.menuitem.roots_plural_label'|trans,
            'entityTitle': title,
            'additional': [{
                'indexPath':   path('orob2b_menu_item_view', {'id': root.id}),
                'indexLabel':  root.defaultTitle
            }]
        } %}
    {% endif %}
    {{ parent() }}
{% endblock pageHeader %}

{% block content_data %}
    {% set id = 'menuitem-edit' %}
    {% set dataForm = [
        form_row(form.titles),
        form_row(form.uri),
        form_row(form.condition),
        form_row(form.image)
    ] %}
    {% set dataBlocks = [{
        'title': 'orob2b.menu.menuitem.sections.general'|trans,
        'class': 'active',
        'subblocks': [{
        'title': '',
        'data': dataForm
    }]
    }] %}

    {% set additionalData = [] %}
    {% for child in form.children if child.vars.extra_field is defined and child.vars.extra_field %}
        {% set additionalData = additionalData|merge([form_row(child)]) %}
    {% endfor %}
    {% if additionalData is not empty %}
        {% set dataBlocks = dataBlocks|merge([{
            'title': 'orob2b.menu.menuitem.sections.additional'|trans,
            'subblocks': [{
                'title': '',
                'useSpan': false,
                'data' : additionalData
            }]
        }] ) %}
    {% endif %}

    {% set data = {
    'formErrors': form_errors(form),
    'dataBlocks': dataBlocks
    } %}

    <div class="menuitem-container tree-component-container">
        <div class="menuitem menuitem-tree tree-component">
            {% set treeOptions = {
                'key' : 'oro-menuitem',
                'data' : orob2b_menu_item_list(entity),
                'nodeId' : entityId ? entityId : parentId,
                'updateAllowed' : resource_granted('orob2b_menu_item_update'),
                'onSelectRoute' : 'orob2b_menu_item_update',
                'onMoveRoute' : 'orob2b_menu_item_move',
                'onRootSelectRoute': 'orob2b_menu_item_view'
            } %}
            <div
                    data-page-component-module="oroui/js/app/components/basic-tree-manage-component"
                    data-page-component-options="{{ treeOptions|json_encode }}"
            ></div>
        </div>
    </div>
    <div class="menuitem-data">
        {{ parent() }}
    </div>
{% endblock content_data %}
