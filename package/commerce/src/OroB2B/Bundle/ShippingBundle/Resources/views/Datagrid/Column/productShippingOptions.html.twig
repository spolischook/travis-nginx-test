{% if value and value|length > 0 %}
    <table>
        <tr>
            <th class="renderable">
                <div class="text-center">{{ 'orob2b.shipping.datagrid.shipping_options.unit.label'|trans }}</div>
            </th>
            <th class="renderable">
                <div class="text-center">{{ 'orob2b.shipping.datagrid.shipping_options.weight.label'|trans }}</div>
            </th>
            <th class="renderable">
                <div class="text-center">{{ 'orob2b.shipping.datagrid.shipping_options.dimensions.label'|trans }}</div>
            </th>
            <th class="renderable">
                <div class="text-center">{{ 'orob2b.shipping.datagrid.shipping_options.freight_class.label'|trans }}</div>
            </th>
        </tr>
        <tbody>
        {% for key, shippingOptions in value %}
            <tr>
                <td class="renderable">
                    <div class="text-center">{{ shippingOptions.productUnit }}</div>
                </td>
                <td class="renderable">
                    <div class="text-center">{{ shippingOptions.weight.value }} {{ shippingOptions.weight.unit }}</div>
                </td>
                <td class="renderable">
                    <div class="text-center">{{ shippingOptions.dimensions.length }} x {{ shippingOptions.dimensions.width }} x {{ shippingOptions.dimensions.height }} {{ shippingOptions.dimensions.unit }}</div>
                </td>
                <td class="renderable">
                    <div class="text-center">{{ shippingOptions.freightClass }}</div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endif %}