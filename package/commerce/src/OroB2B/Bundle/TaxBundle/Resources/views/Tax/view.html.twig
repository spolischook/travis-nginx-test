{% extends 'OroUIBundle:actions:view.html.twig' %}
{% import 'OroDataGridBundle::macros.html.twig' as dataGrid %}

{% oro_title_set({params : {"%taxCode%": entity.code } }) %}

{% block pageHeader %}
    {% set breadcrumbs = {
        'entity': entity,
        'indexPath': path('orob2b_tax_index'),
        'indexLabel': 'orob2b.tax.entity_plural_label'|trans,
        'entityTitle': entity.code|default('N/A'|trans)
    } %}

    {{ parent() }}
{% endblock pageHeader %}

{% block navButtons %}
    {% if resource_granted('EDIT', entity) %}
        {{ UI.editButton({
            'path' : path('orob2b_tax_update', { 'id': entity.id }),
            'entity_label': 'orob2b.tax.entity_label'|trans
        }) }}
    {% endif %}
    {% if resource_granted('DELETE', entity) %}
        {{ UI.deleteButton({
            'dataUrl': path('orob2b_api_tax_delete_tax', {'id': entity.id}),
            'dataRedirect': path('orob2b_tax_index'),
            'aCss': 'no-hash remove-button',
            'dataId': entity.id,
            'id': 'btn-remove-attribute',
            'entity_label': 'orob2b.tax.entity_label'|trans,
        }) }}
    {% endif %}
{% endblock navButtons %}

{% block content_data %}
    {% set taxInfo %}
        {{ UI.renderProperty('orob2b.tax.code.label'|trans, entity.code) }}
        {{ UI.renderProperty('orob2b.tax.description.label'|trans, entity.description) }}
        {{ UI.renderProperty('orob2b.tax.rate.label'|trans, entity.rate|oro_format_percent) }}
    {% endset %}

    {% set dataBlocks = [{
        'title': 'orob2b.tax.sections.general'|trans,
        'class': 'active',
        'subblocks': [
            {'data' : [taxInfo]},
        ]
    }] %}

    {% set id = 'tax-tax-view' %}
    {% set data = {'dataBlocks': dataBlocks} %}

    {{ parent() }}
{% endblock content_data %}