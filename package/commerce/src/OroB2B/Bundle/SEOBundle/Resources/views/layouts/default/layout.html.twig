{% block _meta_title_widget %}
    {{ block('fallback_locale_value') }}
{% endblock %}

{% block _meta_description_widget %}
    {{ block('fallback_locale_value') }}
{% endblock %}

{% block _meta_keywords_widget %}
    {{ block('fallback_locale_value') }}
{% endblock %}

{% block fallback_locale_value %}
    {% if values is not null  %}
        {% set defaultFallbackValue = null %}
        {% for fallbackValue in values %}
            {% if null == fallbackValue.locale %}
                {% set defaultFallbackValue = fallbackValue %}
            {% endif %}
        {% endfor %}

        {% set attr = attr|merge({content : defaultFallbackValue}) %}
    {% endif %}
    {{ block('meta_widget') }}
{% endblock %}
