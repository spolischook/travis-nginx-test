{% block orob2b_pricing_product_attribute_price_collection_widget %}
    {% set attr = attr|merge({'class': (attr.class is defined ? attr.class ~ ' ' : '') ~ 'oro-item-collection grid-container price-list-grid-form' }) %}
    {% set id = id ~ '_collection' %}
    <div class="pricing-price-list"{# data-page-component-module="orob2bpricing/js/app/components/price-lists-errors-handler"#}>
        <div class="row-oro">
            <div {{ block('widget_container_attributes') }}>
                <table class="grid table-hover table table-bordered">
                    <thead>
                    <tr>
                        <th></th>
                        {% for currency in form.vars.currencies %}
                            <th><span>{{ currency }}</span></th>
                        {% endfor %}
                    </tr>
                    </thead>
                    <tbody class="pricing-price-list-items" data-last-index="{{ form.children|length}}">
                    {% if form.children|length %}
                        {% for unit in form.vars.units %}
                            <tr>
                                <td>{{ unit|trans }}</td>
                                {% for child in form.children %}
                                    <td>{{ form_widget(child.price) }}</td>
                                {% endfor %}
                            </tr>
                        {% endfor %}
                    {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
