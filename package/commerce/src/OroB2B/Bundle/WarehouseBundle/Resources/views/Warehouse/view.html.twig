{% extends 'OroUIBundle:actions:view.html.twig' %}

{% oro_title_set({params : {"%name%": entity.name|default('N/A'|trans)}}) %}

{% block pageHeader %}
    {% set breadcrumbs = {
        'entity': entity,
        'indexPath': path('orob2b_warehouse_index'),
        'indexLabel': 'orob2b.warehouse.entity_plural_label'|trans,
        'entityTitle': entity.name |default('N/A'|trans)
        }
    %}
    {{ parent() }}
{% endblock pageHeader %}

{% block navButtons %}
    {% if resource_granted('EDIT', entity) %}
        {{ UI.editButton({
            'path' : path('orob2b_warehouse_update', { 'id': entity.id }),
            'entity_label': 'orob2b.warehouse.entity_label'|trans
        }) }}
    {% endif %}
    {% if resource_granted('DELETE', entity) %}
        {{ UI.deleteButton({
            'dataUrl': path('orob2b_api_delete_warehouse', {'id': entity.id}),
            'dataRedirect': path('orob2b_warehouse_index'),
            'aCss': 'no-hash remove-button',
            'dataId': entity.id,
            'id': 'btn-remove-account',
            'entity_label': 'orob2b.warehouse.entity_label'|trans
        }) }}
    {% endif %}
{% endblock navButtons %}

{% block content_data %}
    {% set warehouseInformationWidget %}
        {{ oro_widget_render({
            'widgetType': 'block',
            'title': 'orob2b.warehouse.widgets.warehouse_information'|trans,
            'url': path('orob2b_warehouse_info', {id: entity.id})
        }) }}
    {% endset %}

    {% set generalSectionBlocks = [{'data' : [warehouseInformationWidget]}]%}

    {% set dataBlocks = [
        {
            'title': 'orob2b.warehouse.sections.general'|trans,
            'class': 'active',
            'priority': -100,
            'subblocks': generalSectionBlocks
        }
    ] %}


    {% set id = 'warehouse-view' %}
    {% set data = {'dataBlocks': dataBlocks} %}

    {{ parent() }}
{% endblock content_data %}
