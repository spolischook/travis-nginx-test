{% set linkTitle = params.title|default(params.label)|trans %}
{% set linkLabel = params.label %}
{% set dialogOptions = {
    'title': params.dialog_title is defined ? params.dialog_title|trans : linkTitle,
    'dialogOptions': params.dialog_options|default({}),
} %}

{% block button %}
    {% if onlyLink is not defined %}<div class="pull-left btn-group icons-holder">{% endif %}
        {% block link %}
            <a {% if (params.id is defined) %}id="{{ params.id }}"{% endif %}
                href="{{ params.path|default('javascript:void(0);') }}"
                class="{{ params.class|default('back icons-holder-text action-button') }} {{ params.aCss|default('') }}"
                title="{{ linkTitle }}"
                data-dialog-url="{{ params.dialogUrl }}"
                data-dialog-options="{{ dialogOptions|json_encode }}"
            >
                <i class="{{ params.icon|default('') }} {{ params.iCss|default('') }} hide-text">{{ linkLabel }}</i>
                {{ linkLabel|trim }}
            </a>
        {% endblock %}
    {% if onlyLink is not defined %}</div>{% endif %}
{% endblock %}
