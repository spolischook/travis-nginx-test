{% block oro_paypal_credit_card_expiration_date_widget -%}
    {% set
    validation = {
    'credit-card-expiration-date-not-blank': {'message': 'oro.paypal.validation.expiration_date', 'payload': null},
    'credit-card-expiration-date': {'message': 'oro.paypal.validation.month', 'payload': null}
    }
    %}

    <div {{ block('widget_attributes') }} data-validation="{{ validation|json_encode }}">
        <div class="{{ class_prefix }}__form__select {{ class_prefix }}__form__select--exp-month">
            {{ form_widget(form.month, {'attr': {'data-expiration-date-month': true}}) }}
        </div>
        <div class="{{ class_prefix }}__form__select {{ class_prefix }}__form__select--exp-year">
            {{ form_widget(form.year, {'attr': {'data-expiration-date-year': true}}) }}
        </div>
    </div>
{%- endblock %}

{% block _oro_paypal_credit_card_save_for_later_row %}
    {{ form_widget(form) }}
{% endblock %}

{% block oro_paypal_paypal_password_type_widget %}
    {{ block('password_widget') }}
{% endblock %}
