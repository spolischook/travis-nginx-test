{% extends 'OroUIBundle:actions:view.html.twig' %}

{% oro_title_set({params : {"%name%": entity.name|default('N/A'|trans)}}) %}

{% block pageHeader %}
    {% set breadcrumbs = {
        'entity': entity,
        'indexPath': path('orob2bpro_website_index'),
        'indexLabel': 'orob2b.website.entity_plural_label'|trans,
        'entityTitle': entity.name |default('N/A'|trans)
        }
    %}
    {{ parent() }}
{% endblock pageHeader %}

{% block content_data %}
    {% set websiteInformationWidget %}
        {{ oro_widget_render({
            'widgetType': 'block',
            'title': 'orob2bpro.website.widgets.website_information'|trans,
            'url': path('orob2bpro_website_info', {id: entity.id})
        }) }}
    {% endset %}

    {% set generalSectionBlocks = [{'data' : [websiteInformationWidget]}]%}

    {% set dataBlocks = [
        {
            'title': 'orob2bpro.website.sections.general'|trans,
            'class': 'active',
            'subblocks': generalSectionBlocks
        }
    ] %}


    {% set id = 'website-view' %}
    {% set data = {'dataBlocks': dataBlocks} %}

    {{ parent() }}
{% endblock content_data %}
