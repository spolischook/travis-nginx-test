{% extends 'OroUIBundle:actions:view.html.twig' %}

{% oro_title_set({params : {"%name%": entity.name}}) %}

{% block pageHeader %}
    {% set breadcrumbs = {
        'entity': entity,
        'indexPath': path('oro_locale_localization_index'),
        'indexLabel': 'oro.locale.localization.entity_plural_label'|trans,
        'entityTitle': 'oro.locale.localization.navigation.view'|trans({
            '%name%': entity.name|default('N/A'|trans)
        })
    } %}
    {{ parent() }}
{% endblock pageHeader %}

{% block content_data %}
    {% set localeWidget %}
        {{ oro_widget_render({
            'widgetType': 'block',
            'title': 'oro.locale.localization.widgets.localization_information'|trans,
            'url': path('oro_locale_localization_info', {'id': entity.id})
        }) }}
    {% endset %}

    {% set dataBlocks = [
        {
            'title': 'oro.locale.localization.sections.general'|trans,
            'class': 'active',
            'subblocks': [{data: [localeWidget]}]
        }
    ] %}

    {% set id = 'localization-view' %}
    {% set data = {'dataBlocks': dataBlocks} %}

    {{ parent() }}
{% endblock content_data %}
