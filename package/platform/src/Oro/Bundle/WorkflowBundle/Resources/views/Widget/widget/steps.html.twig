<div class="widget-content">
    {% set stepsCount = steps|length %}
    <ul class="workflow-step-list nav {% if stepsCount > 1 %}more-than-one-step{% endif %}">
        {% set isProcessed = true %}
        {% for step in steps %}
            {% set isCurrent = currentStep and step.name == currentStep.name %}
            {# Transaltions temporary disabled due to BAP-5355 #}
            <li class="{% if isCurrent %}current{% elseif isProcessed %}processed{% endif %}">
                {{ step.label }}
            </li>
            {% if isCurrent %}
                {% set isProcessed = false %}
            {% endif %}
        {% endfor %}
    </ul>
</div>
