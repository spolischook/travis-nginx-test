{% extends 'OroUIBundle:actions:index.html.twig' %}
{% import 'OroUIBundle::macros.html.twig' as UI %}
{% set gridName = 'system-calendar-grid' %}
{% set pageTitle = 'oro.calendar.systemcalendar.entity_plural_label'|trans %}

{% block navButtons %}
    {% if resource_granted('oro_public_calendar_management') or resource_granted('oro_system_calendar_create') %}
        <div class="btn-group">
            {{ UI.addButton({
                'path' : path('oro_system_calendar_create'),
                'entity_label': 'oro.calendar.systemcalendar.entity_label'|trans
            }) }}
        </div>
    {% endif %}
{% endblock %}
