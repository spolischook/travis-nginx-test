{
    "name": "oro/crm",
    "description": "OroCRM",
    "homepage": "https://github.com/orocrm/crm.git",
    "license": "OSL-3.0",
    "authors": [
        {
            "name": "Oro, Inc",
            "homepage": "http://www.orocrm.com"
        }
    ],
    "autoload": {
        "psr-0": {
            "OroCRM\\Bundle": "src/",
            "Oro": "src/"
         }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packagist.orocrm.com"
        }
    ],
    "require": {
        "php": ">=5.5.9",
        "oro/platform": "self.version",
        "oro/crm-task-bundle": "self.version",
        "oro/crm-call-bundle": "self.version"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    }
}
